# AI settings for summarization
ai:
  base_url: 'http://localhost:1234/v1'
  api_key: 'lm-studio'
  model: 'local-model'

# Reporting settings
reporting:
  output_directory: reports/security_products
  time_window_days: 30  # How many days of data to include in reports
  formats:
    - html
    - markdown

# Product categories for tracking and organization
product_categories:
  - name: "Identity & Access"
    products:
      - Entra ID
      - Entra Identity Protection
      - Entra Permissions Management
      - Entra Verified ID

  - name: "Endpoint Management"
    products:
      - Microsoft Intune
      - Windows Update for Business
      - Autopilot

  - name: "Data Governance & Compliance"
    products:
      - Microsoft Purview
      - Purview Data Loss Prevention
      - Purview Information Protection
      - Purview Insider Risk Management
      - Purview eDiscovery

  - name: "Microsoft 365 & Collaboration"
    products:
      - Microsoft 365 Security
      - Office 365 Security
      - Exchange Online Protection
      - Microsoft Teams
      - SharePoint
      - Exchange Online

  - name: "Windows Security"
    products:
      - Windows Security
      - Windows 11 Security
      - Windows Hello for Business
      - BitLocker
      - Secure Boot

  - name: "Microsoft Copilot"
    products:
      - Security Copilot
      - Microsoft Copilot for Security
      - Microsoft Copilot for Microsoft 365
      - Copilot for Service
      - Copilot for Sales

# Update type classifications (same across all products)
tracking_focus:
  categories:
    - Feature Updates
    - Bug Fixes
    - Security Patches
    - Performance Improvements
    - New Capabilities
    - Detection Updates
    - Known Issues
    - Platform Updates
    - Integration Changes
    - API Changes
    - Deprecations
    - Preview Features

# Notes:
# - This configuration covers Microsoft security products EXCLUDING Defender products
# - Defender products are tracked separately by another SecIntel AI instance
# - Sources include official Microsoft Learn documentation and Tech Community blogs
# - Products focus on: Purview, Copilot, Intune, Azure, Entra ID, Office 365, and Windows
